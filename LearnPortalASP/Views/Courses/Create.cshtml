@using LearnPortalASP.Models.CourseType
@model LearnPortalASP.BLL.DTO.CourseDTO

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create course</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="mb-3 form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="mb-3 form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreatorUserName" class="control-label"></label>
                <input asp-for="CreatorUserName" class="mb-3 form-control" value="@User.Identity?.Name" readonly="true"/>
            </div>
            <div class="form-group">
                Choose skills
                <table class="table table-bordered table-striped table-hover">
                    <tbody> 
                        @{
                            var skills = new List<Skill>();
                        }
                        @for( var i = 0; i < ViewBag.Skills.Count;i++)
                        {
                            <tr>
                                <td>
                                    <div class="form-check">
                                        <label class="form-check-label" for="@skills" asp-validation-for="@skills"></label>
                                        <button class="form-check-input" type="checkbox"></button>
                                        <input type="hidden" asp-for="CourseSkills" />
                                    </div>
                                </td>
                                <td>
                                    @ViewBag.Skills[i].Id
                                    <input type="hidden" asp-for="CourseSkills" />
                                </td>
                                <td>
                                    @ViewBag.Skills[i].Name
                                    <input type="hidden" asp-for="CourseSkills" />
                                </td>
                                <td>
                                    @ViewBag.Skills[i].Description
                                    <input type="hidden" asp-for="CourseSkills" />
                                </td>
                            </tr>
                        }
                    </tbody>
            </table>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

